@model Lebenslauf.Domain.ViewModels.ViewComponent.SideBarViewModel
@using Lebenslauf.Domain.ViewModels.SocialMedia
@using Lebenslauf.Application.StaticTools


<aside class="sidebar js-scroll">
    <div>

        <div class="avatar-wrap">
            <svg class="avatar avatar--180" viewBox="0 0 188 188">
                <g class="avatar__box">
                    <image xlink:href="@(string.IsNullOrEmpty(Model.Informations.Avatar) ? FilePath.DefaultAvatar : $"{FilePath.Avatar}{Model.Informations.Avatar}")" height="100%" width="100%"></image>
                </g>
            </svg>
        </div>

    
        AA  
        <div class="text-center">

            @if (!string.IsNullOrEmpty(Model.Informations.Name))
            {
                <h3 class="title sidebar__user-name">@Model.Informations.Name</h3>
            }

            @if (!string.IsNullOrEmpty(Model.Informations.Job))
            {
                <div class="badge badge--gray">@Model.Informations.Job</div>
            }

            @if (Model.SocialMedias != null && Model.SocialMedias.Any())
            {
                <div class="social">
                    @foreach (SocialMediaViewModel item in Model.SocialMedias)
                    {
                        <a class="social__link" href="@item.Link"><i class="font-icon icon-@item.Icon"></i></a>
                    }
                </div>
            }

        </div>


        <ul class="contact-block">


            @if (!string.IsNullOrEmpty(Model.Informations.DateOfBirth))
            {
                <li class="contact-block__item" data-toggle="tooltip" data-placement="top" title=" Geburstag">
                    <i class="font-icon icon-calendar2"></i>@Model.Informations.DateOfBirth
                </li>
            }


            @if (!string.IsNullOrEmpty(Model.Informations.Address))
            {
                <li class="contact-block__item" data-toggle="tooltip" data-placement="top" title="Address">
                    <i class="font-icon icon-map-pin"></i>@Model.Informations.Address
                </li>
            }


            @if (!string.IsNullOrEmpty(Model.Informations.Email))
            {
                <li class="contact-block__item" data-toggle="tooltip" data-placement="top" title=" Email Addresse">
                    <a href="mailto:example@mail.com"><i class="font-icon icon-mail"></i>@Model.Informations.Email</a>
                </li>
            }


            @if (!string.IsNullOrEmpty(Model.Informations.Phone))
            {
                <li class="contact-block__item" data-toggle="tooltip" data-placement="top" title="HandyNummer">
                    <i class="font-icon icon-smartphone"></i>@Model.Informations.Phone
                </li>
            }

        </ul>

    </div>


    @if (!string.IsNullOrEmpty(Model.Informations.ResumeFile))
    {
        <a class="btn" href="@($"{FilePath.Resume}{Model.Informations.ResumeFile}")" download><i class="font-icon icon-download"></i>Laden sie Lebenslauf Hoch.</a>
    }


</aside> 