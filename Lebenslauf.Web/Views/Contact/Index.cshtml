<h2 class="title title--h2"> Kontakt FOrmular</h2>

<form class="contact-form" asp-controller="Contact" asp-action="Index" method="post">
    <input type="hidden" asp-for="Captcha" />
    <div class="row">

        <div class="form-group col-12 col-md-6">
            <i class="font-icon icon-user"></i>
            <input asp-for="Name" class="input input__icon form-control" placeholder="\ و Vorname & Nachname \">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>

        <div class="form-group col-12 col-md-6">
            <i class="font-icon icon-at"></i>
            <input asp-for="Email" class="input input__icon form-control" placeholder=" Email Addresse" />
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>

        <div class="form-group col-12 col-md-12">
            <textarea asp-for="Text" class="textarea form-control" placeholder=" Eure Nachricht" rows="4"></textarea>
            <span class="text-danger" asp-validation-for="Text"></span>
        </div>

    </div>

    <div class="row mb-5">
        <div class="col-12 col-md-12 order-1 order-md-2 text-left">
            <button type="submit" class="btn"><i class="font-icon icon-send"></i> nachricht Senden</button>
        </div>
    </div>

